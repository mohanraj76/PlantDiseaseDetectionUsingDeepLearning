<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".MainActivity">


    <TextView

        android:layout_marginTop="80dp"
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Your Image Here !"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="bold">
    </TextView>

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/resultImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/Title"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_image_search_24">

    </ImageView>

    <TextView
        android:id="@+id/cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultImage"
        android:text="Open Camera Here !"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
    </TextView>

    <Button
        android:id="@+id/captureButton"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/cam"
        android:text="Camera"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:scaleType="fitCenter"
        android:background="#3E5C1A"
        android:layout_centerHorizontal="true">
    </Button>

    <Button
        android:id="@+id/scanButton"
        android:layout_marginTop="50dp"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:text="SCAN"
        android:layout_below="@id/captureButton"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:textColor="#3E5C1A"
        android:textStyle="bold"
        android:textSize="20sp">
    </Button>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/back"
        android:layout_below="@id/scanButton"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">
    </ImageView>

    <TextView
        android:id="@+id/textViewPrediction"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="47dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disease Result"
        android:textColor="@color/white"
        android:layout_below="@id/scanButton"
        android:layout_centerHorizontal="true">

    </TextView>
</RelativeLayout>